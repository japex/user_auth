
<%= form_for(@user, args_for_form_for(@user)) do |f| %>
  <% if @user.errors.any? -%>
    <div id="errorExplanation">
      <h2><%= t("activerecord.errors.template.header.other") \
                % {model: t("activerecord.model.user"), count: @user.errors.count} %></h2>
      <p><%= t("activerecord.errors.template.body") %></p>
      <ul>
        <% @user.errors.full_messages.each do |msg| -%>
          <li><%= msg %></li>
        <% end -%>
      </ul>
    </div>
  <% end -%>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </div>

  <% if @user.respond_to?(:is_writer) -%>
    <div class="field">
      <%= f.check_box :is_writer %>
      <%= f.label :is_writer %>
    </div>
  <% end -%>

  <% if @user.respond_to?(:is_administrator) -%>
    <div class="field">
      <%= f.check_box :is_administrator %>
      <%= f.label :is_administrator %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end -%>

