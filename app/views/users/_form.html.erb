
<%= form_for(@user, args_for_form_for(@user)) do |f| %>
  <%= uak_error_messages_for(@user) %>

  <table>
    <tr class="field">
      <td><%= f.label :name %></td>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr class="field">
      <td><%= f.label :password %></td>
      <td><%= f.password_field :password %></td>
    </tr>
    <tr class="field">
      <td><%= f.label :password_confirmation %></td>
      <td><%= f.password_field :password_confirmation %></td>
    </tr>
    <tr class="field">
      <td><%= f.label :real_name %></td>
      <td><%= f.text_field :real_name %></td>
    </tr>
    <tr class="field">
      <td><%= f.label :email %></td>
      <td><%= f.text_field :email %></td>
    </tr>
    <tr class="field">
      <td><%= f.label :time_limit %></td>
      <td><%= f.text_field :time_limit %></td>
    </tr>

    <% if @user.respond_to?(:is_writer) -%>
      <tr class="field">
        <td><%= f.check_box :is_writer %><%= f.label :is_writer %></td>
      </tr>
    <% end -%>

    <% if @user.respond_to?(:is_administrator) -%>
      <tr class="field">
        <td><%= f.check_box :is_administrator %><%= f.label :is_administrator %></td>
      </tr>
    <% end -%>
  </table>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end -%>

