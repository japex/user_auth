
<%= form_for(@user, args_for_form_for(@user)) do |f| %>
  <% if @user.errors.any? -%>
    <div id="errorExplanation">
      <h2><%= t("activerecord.errors.template.header.other") \
                % {model: t("activerecord.model.user"), count: @user.errors.count} %></h2>
      <%= t("activerecord.errors.template.body") %>
      <ul>
        <% @user.errors.full_messages.each do |msg| -%>
          <li><%= msg %></li>
        <% end -%>
      </ul>
    </div>
  <% end -%>

  <div class="field">
    <%= f.label t("helpers.label.user.name") %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label t("helpers.label.user.password") %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label t("helpers.label.user.password_confirmation") %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end -%>

